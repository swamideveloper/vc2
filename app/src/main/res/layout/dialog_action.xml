<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="@drawable/bg_dialog_sx"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:fontFamily="@font/pop_semi_bold"
        android:gravity="center"
        android:text="Report"
        android:textColor="@color/light_black"
        android:textSize="16sp" />

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_gravity="center"
       android:gravity="center"
       android:layout_marginHorizontal="@dimen/_16sdp">

       <TextView
           android:id="@+id/txt_1"
           android:layout_width="match_parent"
           android:layout_height="44dp"
           android:fontFamily="@font/pop_reg"
           android:gravity="center"
           android:background="@drawable/border_report"
           android:text="Incorrect Gender"
           android:textColor="@color/red_light"
           android:textSize="14sp" />

       <TextView
           android:id="@+id/txt_2"
           android:layout_marginTop="6dp"
           android:layout_width="match_parent"
           android:layout_height="44dp"
           android:fontFamily="@font/pop_reg"
           android:gravity="center"
           android:background="@drawable/border_report"
           android:text="Sexual Behaviour"
           android:textColor="@color/red_light"
           android:textSize="14sp" />

       <TextView
           android:id="@+id/txt_3"
           android:layout_marginTop="6dp"
           android:layout_width="match_parent"
           android:layout_height="44dp"
           android:fontFamily="@font/pop_reg"
           android:gravity="center"
           android:background="@drawable/border_report"
           android:text="Incorrect Age"
           android:textColor="@color/red_light"
           android:textSize="14sp" />

       <TextView
           android:id="@+id/txt_4"
           android:layout_marginTop="6dp"
           android:layout_width="match_parent"
           android:layout_height="44dp"
           android:fontFamily="@font/pop_reg"
           android:gravity="center"
           android:background="@drawable/border_report"
           android:text="Inappropriate Behaviour"
           android:textColor="@color/red_light"
           android:textSize="14sp" />

       <TextView
           android:id="@+id/txt_5"
           android:layout_marginTop="6dp"
           android:layout_width="match_parent"
           android:layout_height="44dp"
           android:fontFamily="@font/pop_reg"
           android:gravity="center"
           android:background="@drawable/border_report"
           android:text="Pornographic Behaviours"
           android:textColor="@color/red_light"
           android:textSize="14sp" />

       <TextView
           android:id="@+id/txt_6"
           android:layout_marginTop="6dp"
           android:layout_width="match_parent"
           android:layout_height="44dp"
           android:fontFamily="@font/pop_reg"
           android:gravity="center"
           android:background="@drawable/border_report"
           android:text="Language Violence"
           android:textColor="@color/red_light"
           android:textSize="14sp" />

   </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:fontFamily="@font/pop_light"
        android:gravity="center"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:text="After reporting, you will not match or see this user again."
        android:textColor="@color/gray"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/txt_dismiss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:fontFamily="@font/pop_semi_bold"
        android:gravity="center"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:text="CANCEL"
        android:textColor="@color/black"
        android:textSize="15sp" />


</LinearLayout>